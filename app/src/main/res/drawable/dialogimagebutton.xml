<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item
                android:drawable="@drawable/ui_clicked_button">
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item
                android:drawable="@drawable/ui_unenable_button">
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item
                android:drawable="@drawable/ui_button">
            </item>
        </layer-list>
    </item>

</selector>