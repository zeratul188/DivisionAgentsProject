<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#4E3600"/>
            <stroke
                android:width="1dp"
                android:color="#80bbbbbb"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
                    <solid android:color="#B18912" />
                    <stroke
                        android:width="1dp"
                        android:color="#80bbbbbb"/>
                </shape>
            </item>
            <item
                android:left="130dp"
                android:right="130dp"
                android:drawable="@drawable/namedlogo"/>
        </layer-list>
    </item>

</selector>