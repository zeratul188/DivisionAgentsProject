<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <padding android:left="10dp" android:right="10dp"/>
            <solid android:color="#aafe6e0e"/>
