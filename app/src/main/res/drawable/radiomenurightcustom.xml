<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
            <solid android:color="#00222222" />
            <stroke
                android:width="1dp"
                android:color="#80444444"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:right="-5dp"
                android:top="-5dp"
                android:bottom="-5dp">
                <shape>
                    <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
                    <solid android:color="#aa111111" />
                    <stroke
                        android:width="1dp"
                        android:color="#999999"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="-5dp">
                <shape>
                    <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
                    <solid android:color="#00000000" />
                    <stroke
                        android:width="1dp"
                        android:color="#999999"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>