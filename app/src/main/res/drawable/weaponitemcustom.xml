<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="2dp" android:right="2dp" android:top="4dp" />
            <solid android:color="#80888888" />
            <stroke android:width="1dp" android:color="#80aaaaaa"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <padding android:bottom="4dp" android:left="2dp" android:right="2dp" android:top="4dp" />
            <solid android:color="#80444444" />
            <stroke android:width="1dp" android:color="#80aaaaaa"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="4dp" android:left="2dp" android:right="2dp" android:top="4dp" />
            <solid android:color="#60444444" />
            <stroke android:width="1dp" android:color="#80aaaaaa"/>
        </shape>
    </item>

</selector>