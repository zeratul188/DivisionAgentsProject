<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#8F3E00"/>

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#fe6e0e"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
                    <solid android:color="#fe6e0e" />
                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#fe6e0e"/>
                </shape>
            </item>
            <item
                android:left="100dp"
                android:top="-50dp"
                android:bottom="-50dp"
                android:right="100dp"
                android:drawable="@drawable/exoticlogo"/>
        </layer-list>
    </item>

</selector>