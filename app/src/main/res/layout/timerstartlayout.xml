<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15dp" android:background="#222222">

    <TextView
        android:id="@+id/txtResultTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'목표 달성'까지 남은 시간"
        android:textSize="25sp"
        android:textColor="#aaaaaa"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 시간 : "
                android:textSize="20sp"
                android:textColor="#aaaaaa"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0초"
                android:textSize="20sp"
                android:textColor="#f0f0f0"/>
        </LinearLayout>
        <ProgressBar
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="16dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_progressbar_gage"
            android:background="@drawable/gage"
            android:id="@+id/progressTimer"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingBottom="6dp"
            android:paddingTop="3dp"
            android:indeterminateTint="#E45435"/>
    </LinearLayout>



</LinearLayout>