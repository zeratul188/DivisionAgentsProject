<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15dp" android:background="#222222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/txtResultTarget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="'목표 달성'까지 남은 시간"
            android:textSize="18sp"
            android:textColor="#aaaaaa"/>
        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0초"
            android:textSize="18sp"
            android:textColor="#f0f0f0"/>
    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_progressbar_gage"
        android:background="@drawable/gage2"
        android:id="@+id/progressTimer"
        android:paddingTop="5dp"
        android:indeterminateTint="#E45435"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnEnd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="종료"
            android:textSize="18sp"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonnobackcustom"
            android:drawableTop="@drawable/ic_close_black_24dp"/>
        <Button
            android:id="@+id/btnReplay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="다시 시작"
            android:textSize="18sp"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonnobackcustom"
            android:drawableTop="@drawable/ic_refresh_black_40dp"/>
    </LinearLayout>
</LinearLayout>