<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00222222">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_border_black_40dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnExit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:drawableTop="@drawable/ic_close_black_24dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialoglayoutcustom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialogbackground"
                android:layout_gravity="right"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tableMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/rareitem"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imgType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/wp1custom"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="독수리를 거느린 자"
                            android:textSize="22sp"
                            android:textColor="#f0f0f0"/>
                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="돌격소총"
                            android:textSize="15sp"
                            android:textColor="#888888"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutWeapon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="핵심 속성"
                        android:textSize="20sp"
                        android:background="#10f0f0f0"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#aaaaaa"/>
                    <LinearLayout
                        android:id="@+id/layoutWeaponMain1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtWMain1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+15% 돌격소총 데미지"
                                android:layout_marginBottom="5dp"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="#aaaaaa"/>
                            <ImageView
                                android:id="@+id/imgWeaponEdit1"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/edited_foreground"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progressbar_progressbar_gage"
                            android:background="@drawable/gage2"
                            android:id="@+id/progressWMain1"
                            android:paddingTop="5dp"
                            android:progress="100"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="#E45435"/>
                        <SeekBar
                            android:id="@+id/seekWMain1"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:thumb="@drawable/ic_second_40dp"
                            android:progress="100"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:progressDrawable="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutWeaponMain2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtWMain2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+10% 생명력 데미지"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:textColor="#aaaaaa"/>
                            <ImageView
                                android:id="@+id/imgWeaponEdit2"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/edited_foreground"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progressbar_progressbar_gage"
                            android:background="@drawable/gage2"
                            android:id="@+id/progressWMain2"
                            android:paddingTop="5dp"
                            android:progress="74"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="#E45435"/>
                        <SeekBar
                            android:id="@+id/seekWMain2"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:thumb="@drawable/ic_second_40dp"
                            android:progress="100"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:progressDrawable="@null"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="속성"
                        android:textSize="20sp"
                        android:background="#10f0f0f0"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#aaaaaa"/>
                    <LinearLayout
                        android:id="@+id/layoutWeaponSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtWSub"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+5% 방어구 대상 데미지"
                                android:layout_marginBottom="5dp"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textColor="#aaaaaa"/>
                            <ImageView
                                android:id="@+id/imgWeaponEdit3"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/edited_foreground"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/progressbar_progressbar_gage"
                            android:background="@drawable/gage2"
                            android:id="@+id/progressWSub"
                            android:progress="84"
                            android:paddingTop="5dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:indeterminateTint="#E45435"/>
                        <SeekBar
                            android:id="@+id/seekWSub"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:thumb="@drawable/ic_second_40dp"
                            android:progress="100"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:progressDrawable="@null"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSheld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="핵심 속성"
                        android:textSize="20sp"
                        android:background="#10f0f0f0"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#aaaaaa"/>
                    <LinearLayout
                        android:id="@+id/layoutSheldMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">
                            <ImageView
                                android:id="@+id/imgSMain"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/sheld"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtSMain"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+170000 방어구"
                                android:drawablePadding="10dp"
                                android:textSize="18sp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center"
                                android:textColor="#aaaaaa"/>
                            <ImageView
                                android:id="@+id/imgSheldEdit1"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/edited_foreground"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/sheld_progress"
                            android:background="@drawable/gage2"
                            android:id="@+id/progressSMain"
                            android:paddingTop="5dp"
                            android:progress="50"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:indeterminateTint="#E45435"/>
                        <SeekBar
                            android:id="@+id/seekSMain"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:thumb="@drawable/ic_second_40dp"
                            android:progress="100"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:progressDrawable="@null"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="속성"
                        android:textSize="20sp"
                        android:background="#10f0f0f0"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#aaaaaa"/>
                    <LinearLayout
                        android:id="@+id/layoutSheldSub1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgSSub1"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/power_sub"
                                android:textAlignment="textEnd"/>
                            <TextView
                                android:id="@+id/txtSSub1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="+10% 스킬 가속"
                                android:layout_marginBottom="5dp"
                                android:textSize="18sp"
                                android:layout_marginRight="10dp"
                                android:textColor="#aaaaaa"/>
                            <ImageView
                                android:id="@+id/imgSheldEdit2"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/edited_foreground"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/power_progress"
                            android:background="@drawable/gage2"
                            android:id="@+id/progressSSub1"
                            android:paddingTop="5dp"
                            android:progress="84"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:indeterminateTint="#E45435"/>
                        <SeekBar
                            android:id="@+id/seekSSub1"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:thumb="@drawable/ic_second_40dp"
                            android:progress="100"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:progressDrawable="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutSheldSub2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:id="@+id/layoutSSub2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgSSub2"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/attack_sub"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:textAlignment="textEnd"/>
                                <TextView
                                    android:id="@+id/txtSSub2"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="+6% 치명타 확률"
                                    android:layout_marginBottom="5dp"
                                    android:textSize="18sp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#aaaaaa"/>
                                <ImageView
                                    android:id="@+id/imgSheldEdit3"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/edited_foreground"
                                    android:layout_marginRight="10dp"
                                    android:visibility="gone"/>
                            </LinearLayout>
                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressDrawable="@drawable/attack_progress"
                                android:background="@drawable/gage2"
                                android:id="@+id/progressSSub2"
                                android:paddingTop="5dp"
                                android:progress="20"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:indeterminateTint="#E45435"/>
                            <SeekBar
                                android:id="@+id/seekSSub2"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:thumb="@drawable/ic_second_40dp"
                                android:progress="100"
                                android:layout_marginLeft="-5dp"
                                android:layout_marginRight="-5dp"
                                android:progressDrawable="@null"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutSheldSub3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:visibility="gone"
                        android:paddingBottom="10dp">
                        <LinearLayout
                            android:id="@+id/layoutSSub3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imgSSub3"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/attack"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:textAlignment="textEnd"/>
                                <TextView
                                    android:id="@+id/txtSSub3"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="+6% 치명타 확률"
                                    android:layout_marginBottom="5dp"
                                    android:textSize="18sp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#c99700"/>
                            </LinearLayout>
                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressDrawable="@drawable/attack_progress"
                                android:background="@drawable/gage2"
                                android:id="@+id/progressSSub3"
                                android:paddingTop="5dp"
                                android:progress="20"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:indeterminateTint="#E45435"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutTalentButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layoutTalent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="특수효과"
                            android:textSize="20sp"
                            android:background="#10f0f0f0"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="#aaaaaa"/>
                        <LinearLayout
                            android:id="@+id/layoutTalentContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/talentbackgroundcustom"
                            android:paddingTop="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txtWTalent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="영속성"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="20sp"
                                    android:textColor="#aaaaaa"/>
                                <ImageView
                                    android:id="@+id/imgTalentEdit"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/edited_foreground"
                                    android:layout_marginRight="10dp"
                                    android:layout_gravity="center"
                                    android:visibility="gone"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/txtWTalentContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="적을 명중시키면 5초동안 스킬 대미지가 20% 상승합니다.\n스킬을 사용하거나 적에게 스킬로 피해를 주면 5초동안 무기 대미지가 20% 상승합니다.\n두 효과가 동시에 작동하면 버프가 두 배의 효과로 적용됩니다."
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="18sp"
                                android:textColor="#aaaaaa"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/btnDrop"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:background="@drawable/subbuttonhub"
                android:layout_gravity="center"
                android:text="버리기"
                android:textColor="#aaaaaa"
                android:layout_marginRight="5dp"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btnDestroy"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:background="@drawable/mainbuttonhub"
                android:layout_gravity="center"
                android:text="분해"
                android:textColor="#fe6e0e"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>