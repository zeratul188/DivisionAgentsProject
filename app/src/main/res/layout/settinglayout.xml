<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#222222">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnAllReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체 초기화"
            android:drawableLeft="@drawable/reset_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnAllSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전부 저장"
            android:drawableLeft="@drawable/ic_save_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnAllLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전부 불러오기"
            android:drawableLeft="@drawable/ic_input_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보정 라이브러리"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#40f0f0f0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnLibraryReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 삭제"
            android:drawableLeft="@drawable/ic_delete_list_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnLibraryMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 최대치 조정"
            android:drawableLeft="@drawable/maxoption_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnLibrarySave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 저장"
            android:drawableLeft="@drawable/ic_save_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnLibraryLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 불러오기"
            android:drawableLeft="@drawable/ic_input_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHD 레벨"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#40f0f0f0"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnLevelReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonsettingcustom"
            android:drawableLeft="@drawable/reset_foreground"
            android:text="SHD 초기화"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textColor="#f0f0f0"/>
        <Button
            android:id="@+id/btnSHDSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHD 저장"
            android:drawableLeft="@drawable/ic_save_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnSHDLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHD 불러오기"
            android:drawableLeft="@drawable/ic_input_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#40f0f0f0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnMaterialReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모든 재료 초기화"
            android:drawableLeft="@drawable/reset_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnMaterialMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 최대치 조정"
            android:drawableLeft="@drawable/maxoption_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnMaterialSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 저장"
            android:drawableLeft="@drawable/ic_save_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnMaterialLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 불러오기"
            android:drawableLeft="@drawable/ic_input_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인벤토리"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#40f0f0f0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnInventoryClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인벤토리 비우기"
            android:drawableLeft="@drawable/ic_delete_list_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnInventorySave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인벤토리 저장"
            android:drawableLeft="@drawable/ic_save_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnInventoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인벤토리 불러오기"
            android:drawableLeft="@drawable/ic_input_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자 모드"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40f0f0f0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 모드 활성화"
            android:drawableLeft="@drawable/ic_developer_mode_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 정보"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#40f0f0f0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version"
                android:textColor="#aaaaaa"
                android:layout_marginRight="5dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.8.3"
                android:textColor="#f0f0f0"
                android:layout_marginRight="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Update"
                android:textColor="#aaaaaa"
                android:layout_marginRight="5dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.1"
                android:textColor="#f0f0f0"
                android:layout_marginRight="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="앱 권한"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장공간 : "
                android:textColor="#aaaaaa"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txtWriteRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="거부됨"
                android:textColor="#FF0000"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>