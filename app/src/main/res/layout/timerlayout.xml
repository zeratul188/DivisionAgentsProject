<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15dp"
    android:background="#222222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="목표 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <EditText
            android:id="@+id/edtTarget"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textColorHint="#777777"
            android:textColor="#f0f0f0"
            android:hint="목표"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표까지 걸리는 시간"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#f0f0f0"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="시간 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <EditText
            android:id="@+id/edtHour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="#777777"
            android:textColor="#f0f0f0"
            android:hint="HH"
            android:maxLength="2"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="분 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <EditText
            android:id="@+id/edtMinute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="MM"
            android:textColorHint="#777777"
            android:textColor="#f0f0f0"
            android:maxLength="2"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:textAlignment="textEnd"/>
        <EditText
            android:id="@+id/edtSecond"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="SS"
            android:textColorHint="#777777"
            android:textColor="#f0f0f0"
            android:maxLength="2"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnTimerCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/buttoncustom"
            android:text="취소"
            android:textColor="#aaaaaa"
            android:textSize="25sp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/btnTimerPlay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/buttoncustomspecial"
            android:text="실행"
            android:textColor="#f0f0f0"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>