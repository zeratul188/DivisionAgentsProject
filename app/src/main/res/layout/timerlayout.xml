<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnTimerCancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_gravity="right"
        android:drawableTop="@drawable/ic_close_black_24dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialoglayoutcustom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialogbackground"
            android:layout_gravity="right"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="목표 : "
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:textAlignment="textEnd"/>
                <EditText
                    android:id="@+id/edtTarget"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColorHint="#777777"
                    android:textColor="#f0f0f0"
                    android:background="@drawable/title_edittext_custom"
                    android:fontFamily="@font/borda"
                    android:hint="목표"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목표까지 걸리는 시간"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="시간 : "
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:textAlignment="textEnd"/>
                <EditText
                    android:id="@+id/edtHour"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColorHint="#777777"
                    android:textColor="#f0f0f0"
                    android:hint="HH"
                    android:background="@drawable/edittext_custom"
                    android:textAlignment="center"
                    android:fontFamily="@font/borda"
                    android:maxLength="2"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="분 : "
                    android:textSize="18sp"
                    android:textColor="#aaaaaa"
                    android:textAlignment="textEnd"/>
                <EditText
                    android:id="@+id/edtMinute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:textColorHint="#777777"
                    android:textColor="#f0f0f0"
                    android:maxLength="2"
                    android:background="@drawable/edittext_custom"
                    android:textAlignment="center"
                    android:fontFamily="@font/borda"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#f0f0f0"
                    android:text="초 : "
                    android:textAlignment="textEnd"/>
                <EditText
                    android:id="@+id/edtSecond"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="SS"
                    android:textAlignment="center"
                    android:textColorHint="#777777"
                    android:textColor="#f0f0f0"
                    android:maxLength="2"
                    android:background="@drawable/edittext_custom"
                    android:fontFamily="@font/borda"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:id="@+id/btnTimerPlay"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="실행"
        android:textColor="#fe6e0e"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

</LinearLayout>