<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#00222222">
    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/notmaxbackground"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgType"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/weaponicon"/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="비엄폐 대상 데미지"
                android:layout_marginLeft="10dp"
                android:textColor="#f0f0f0"
                android:textSize="18sp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/layoutNoTalent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max : "
                    android:textColor="#f0f0f0"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="#f0f0f0"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#f0f0f0"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_progressbar_gage"
            android:background="@drawable/gage2"
            android:id="@+id/progressOption"
            android:paddingTop="5dp"
            android:progress="100"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:indeterminateTint="#E45435"/>
    </LinearLayout>
        
</LinearLayout>