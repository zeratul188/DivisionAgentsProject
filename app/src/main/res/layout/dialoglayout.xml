<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/dialoglayoutcustom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적 NPC 등급"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="#40aaaaaa"
                android:layout_gravity="center"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <RadioButton
                android:id="@+id/rdoType1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="일반"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:checked="true"
                android:textColor="#f0f0f0"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/rdoType2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="베테랑"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:textColor="#f0f0f0"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rdoType3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="정예/네임드"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:gravity="center"
                android:textColor="#f0f0f0"
                android:textSize="18sp"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적 NPC 정보"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="#40aaaaaa"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="방어구 : "
                android:textColor="#aaaaaa"
                android:textSize="18sp"
                android:textAlignment="textEnd"/>

            <EditText
                android:id="@+id/edtSheld"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"
                android:text=""
                android:textColor="#f0f0f0"
                android:textColorHint="#aaaaaa"
                android:hint="0~999999999"
                android:maxLength="9"
                android:background="@drawable/edittext_custom"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/chkHittedSheld"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/radiocustom"
                android:text="저거넛"
                android:button="@null"
                android:gravity="center"
                android:textColor="#aaaaaa"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="체력 : "
                android:textColor="#aaaaaa"
                android:textSize="18sp"
                android:textAlignment="textEnd"/>

            <EditText
                android:id="@+id/edtHealth"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:inputType="number"
                android:text=""
                android:textColor="#f0f0f0"
                android:textColorHint="#aaaaaa"
                android:background="@drawable/title_edittext_custom"
                android:hint="1~999999999"
                android:maxLength="9"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적 NPC 상태"
                android:textSize="18sp"
                android:textColor="#aaaaaa"
                android:layout_marginRight="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="#40aaaaaa"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <CheckBox
                android:id="@+id/chkElite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비엄폐 여부"
                android:textColor="#f0f0f0"
                android:textSize="18sp"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>
            <CheckBox
                android:id="@+id/chkPVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PVP 여부"
                android:textColor="#f0f0f0"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
            <CheckBox
                android:id="@+id/chkCluch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="적 클러치 여부"
                android:textColor="#444444"
                android:button="@null"
                android:background="@drawable/radiocustom"
                android:gravity="center"
                android:enabled="false"
                android:textSize="18sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layoutPVP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계수를 선택하십시오."
                            android:textSize="18sp"
                            android:layout_marginRight="10dp"
                            android:textColor="#aaaaaa"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="2dp"
                            android:background="#40aaaaaa"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp">
                        <RadioGroup
                            android:id="@+id/rgPVP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <RadioButton
                                android:id="@+id/rdoPVP1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="돌격소총"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textColor="#f0f0f0"
                                android:textSize="18sp"
                                android:checked="true"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="소총"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textColor="#f0f0f0"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="지정사수소총"
                                android:textColor="#f0f0f0"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="기관단총"
                                android:textColor="#f0f0f0"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="경기관총"
                                android:textColor="#f0f0f0"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="산탄총"
                                android:textColor="#f0f0f0"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_marginBottom="5dp"/>
                            <RadioButton
                                android:id="@+id/rdoPVP7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:button="@null"
                                android:background="@drawable/radiocustom"
                                android:gravity="center"
                                android:textColor="#f0f0f0"
                                android:text="권총"/>
                        </RadioGroup>
                    </ScrollView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutCluch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상대방 정보를 입력하세요."
                            android:textSize="18sp"
                            android:textColor="#aaaaaa"
                            android:layout_marginRight="10dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="2dp"
                            android:background="#40aaaaaa"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="RPM : "
                            android:textSize="18sp"
                            android:textColor="#f0f0f0"
                            android:textAlignment="textEnd"/>
                        <EditText
                            android:id="@+id/edtCluchRPM"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColorHint="#aaaaaa"
                            android:textColor="#f0f0f0"
                            android:hint="0~9999"
                            android:background="@drawable/edittext_custom"
                            android:inputType="number"
                            android:maxLength="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="치명타 확률 : "
                            android:textSize="18sp"
                            android:textColor="#f0f0f0"
                            android:textAlignment="textEnd"/>
                        <EditText
                            android:id="@+id/edtCluchCritical"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColorHint="#aaaaaa"
                            android:textColor="#f0f0f0"
                            android:hint="0~99.9"
                            android:background="@drawable/edittext_custom"
                            android:inputType="numberDecimal"
                            android:maxLength="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="재장전 시간 : "
                            android:textSize="18sp"
                            android:textColor="#f0f0f0"
                            android:textAlignment="textEnd"/>
                        <EditText
                            android:id="@+id/edtCluchReload"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textColorHint="#aaaaaa"
                            android:textColor="#f0f0f0"
                            android:hint="0~99.9"
                            android:background="@drawable/edittext_custom"
                            android:inputType="numberDecimal"
                            android:maxLength="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="탄창 수 : "
                            android:textSize="18sp"
                            android:textColor="#f0f0f0"
                            android:textAlignment="textEnd"/>
                        <EditText
                            android:id="@+id/edtCluchAmmo"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:hint="0~9999"
                            android:textColorHint="#aaaaaa"
                            android:textColor="#f0f0f0"
                            android:background="@drawable/edittext_custom"
                            android:inputType="number"
                            android:maxLength="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="명중률 : "
                            android:textSize="18sp"
                            android:textColor="#f0f0f0"
                            android:textAlignment="textEnd"/>
                        <EditText
                            android:id="@+id/edtCluchAiming"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:hint="0~9999"
                            android:textColorHint="#aaaaaa"
                            android:textColor="#f0f0f0"
                            android:background="@drawable/edittext_custom"
                            android:inputType="number"
                            android:maxLength="4"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonnobackcustom"
            android:drawableTop="@drawable/ic_close_black_24dp"
            android:text="취소"
            android:textColor="#aaaaaa"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonnobackcustom"
            android:drawableTop="@drawable/ic_play_arrow_black_40dp"
            android:text="실행"
            android:textColor="#f0f0f0"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>