<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp" android:gravity="center"
    android:background="#00222222">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Talent Name]"
        android:textSize="20sp"
        android:textColor="#FF6337"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Talent Content]"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#aaaaaa"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/subbuttonhub"
        android:layout_gravity="center"
        android:text="확인"
        android:textColor="#aaaaaa"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"/>

</LinearLayout>