<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#222222">
    <LinearLayout
        android:id="@+id/layoutChecked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/notselectcustom"
        android:layout_marginBottom="1dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialogbackground"
                android:adjustViewBounds="true"
                android:layout_gravity="right"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/imgType"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wp1"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Item Name]"
                            android:textColor="#f0f0f0"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Item Type]"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:textColor="#aaaaaa"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgDestroy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_close_black_24dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주 속성"
                    android:textColor="#aaaaaa"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:id="@+id/layoutCore1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtCore1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="[Core1 Option]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                        <TextView
                            android:id="@+id/txtCoreValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Core1 Value]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressbar_progressbar_gage"
                        android:background="@drawable/gage2"
                        android:id="@+id/progressCore1"
                        android:paddingTop="5dp"
                        android:progress="100"
                        android:layout_gravity="center"
                        android:indeterminateTint="#E45435"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutCore2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtCore2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="[Core2 Option]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                        <TextView
                            android:id="@+id/txtCoreValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Core2 Value]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressbar_progressbar_gage"
                        android:background="@drawable/gage2"
                        android:id="@+id/progressCore2"
                        android:paddingTop="5dp"
                        android:progress="100"
                        android:layout_gravity="center"
                        android:indeterminateTint="#E45435"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="속성"
                    android:textColor="#aaaaaa"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:id="@+id/layoutSub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtSub1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="[Sub1 Option]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                        <TextView
                            android:id="@+id/txtSubValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Sub1 Value]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressbar_progressbar_gage"
                        android:background="@drawable/gage2"
                        android:id="@+id/progressSub1"
                        android:paddingTop="5dp"
                        android:progress="100"
                        android:layout_gravity="center"
                        android:indeterminateTint="#E45435"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutSub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtSub2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="[Sub2 Option]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                        <TextView
                            android:id="@+id/txtSubValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="[Sub2 Value]"
                            android:textSize="16sp"
                            android:textColor="#aaaaaa"/>
                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressbar_progressbar_gage"
                        android:background="@drawable/gage2"
                        android:id="@+id/progressSub2"
                        android:paddingTop="5dp"
                        android:progress="100"
                        android:layout_gravity="center"
                        android:indeterminateTint="#E45435"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layoutTalent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="특수 효과"
                        android:textColor="#aaaaaa"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/txtTalent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[Talent]"
                        android:textColor="#aaaaaa"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>