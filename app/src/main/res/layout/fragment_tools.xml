<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<TextView
        android:id="@+id/text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/redwall4"
            android:scaleType="centerCrop"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공략 및 정보"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="#aaaaaa"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnList1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="디비전 2 헌터 마스크 공략"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="[매닝동물원] 히든보스 소환하는 방법"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="그랜드 워싱턴 호텔 비밀방 여는법"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="엑조틱 기관단총 촉새 만드는법"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="루스벨트아일랜드 비밀의방 여는방법 (일명 부엉이방)"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="뷰포인트박물관 비밀루팅방 여는 방법"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList7"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="항공우주박물관 숨겨진 우주인방"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnList8"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttoncustom"
                    android:text="미항공우주국 이스터에그 보는법"
                    android:textColor="#aaaaaa"
                    android:textSize="18sp" />

            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>