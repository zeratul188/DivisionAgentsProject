<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp" android:gravity="center"
    android:background="#00222222">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로드아웃 [1]"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#fe6e0e"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[Maked Date]"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#aaaaaa"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/btnApply"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="적용"
        android:textColor="#fe6e0e"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnInput"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="덮어쓰기"
        android:textColor="#fe6e0e"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="삭제"
        android:textColor="#fe6e0e"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/subbuttonhub"
        android:layout_gravity="center"
        android:text="취소"
        android:textColor="#aaaaaa"
        android:textSize="20sp"/>

</LinearLayout>