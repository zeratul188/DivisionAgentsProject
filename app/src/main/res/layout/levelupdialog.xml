<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_gravity="right"
        android:drawableTop="@drawable/ic_close_black_24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dialoglayoutcustom"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레벨 상승 : "
            android:textSize="20sp"
            android:textColor="#aaaaaa"/>
        <Spinner
            android:id="@+id/spinnerLevel"
            android:background="@drawable/spinnercustom"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnLevelUP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/dialogimagebutton"
        android:layout_gravity="center"
        android:text="레벨업"
        android:textColor="#f0f0f0"
        android:layout_margin="10dp"
        android:textSize="18sp"/>
</LinearLayout>