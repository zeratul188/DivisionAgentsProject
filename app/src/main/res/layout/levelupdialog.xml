<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#222222"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="레벨 상승"
            android:textSize="20sp"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="20dp"/>
        <Spinner
            android:id="@+id/spinnerLevel"
            android:background="@drawable/spinnercustom"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:textSize="18sp"
            android:textColor="#f0f0f0"
            android:drawableTop="@drawable/ic_close_black_24dp"
            android:background="@drawable/buttonnobackcustom"
            android:padding="5dp"/>
        <Button
            android:id="@+id/btnLevelUP"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="레벨 업"
            android:textSize="18sp"
            android:textColor="#f0f0f0"
            android:drawableTop="@drawable/ic_add_black_40dp"
            android:background="@drawable/buttonnobackcustom"
            android:padding="5dp"/>
    </LinearLayout>
</LinearLayout>