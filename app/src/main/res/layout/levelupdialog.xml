<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_gravity="right"
        android:drawableTop="@drawable/ic_close_black_24dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialoglayoutcustom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialogbackground"
            android:layout_gravity="right"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨 상승 : "
                android:textSize="20sp"
                android:textColor="#aaaaaa"/>
            <Spinner
                android:id="@+id/spinnerLevel"
                android:background="@drawable/spinnercustom"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </FrameLayout>
    <Button
        android:id="@+id/btnLevelUP"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="레벨업"
        android:textColor="#fe6e0e"
        android:layout_margin="10dp"
        android:textSize="18sp"/>
</LinearLayout>