<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#80222222">

    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#fdae13"
        android:layout_marginRight="7dp"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp">
            <ImageView
                android:id="@+id/imgType"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mask"
                android:adjustViewBounds="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Named Name]"
                android:textColor="#fdae13"
                android:textSize="20sp"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
            <TableRow>
                <TextView
                    android:text="브랜드 : "
                    android:textSize="16sp"
                    android:textColor="#cdcdcd"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/txtBrand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="[Brand Name]"
                    android:textSize="16sp"
                    android:textColor="#f0f0f0"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="획득처 : "
                    android:textSize="16sp"
                    android:textColor="#cdcdcd"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="[Sheld Location]"
                    android:textSize="16sp"
                    android:textColor="#f0f0f0"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtTalent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Named Talent]"
            android:textColor="#aafdae13"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Named Talent Content]"
            android:textSize="16sp"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>