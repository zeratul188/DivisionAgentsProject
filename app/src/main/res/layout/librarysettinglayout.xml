<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#222222">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 초기화"
            android:drawableLeft="@drawable/reset_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보정 라이브러리 최대치 조정"
            android:drawableLeft="@drawable/maxoption_foreground"
            android:textColor="#f0f0f0"
            android:background="@drawable/buttonsettingcustom"
            android:textSize="18sp"
            android:gravity="left|center"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>