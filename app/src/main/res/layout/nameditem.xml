<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#80222222">

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#fdae13"
        android:layout_marginRight="10dp"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Named Name]"
            android:textColor="#fdae13"
            android:textSize="30sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp">
            <TableRow>
                <TextView
                    android:text="기반 무기 : "
                    android:textSize="20sp"
                    android:textColor="#cdcdcd"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/txtWeapon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="[Weapon Name]"
                    android:textSize="20sp"
                    android:textColor="#f0f0f0"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="획득처 : "
                    android:textSize="20sp"
                    android:textColor="#cdcdcd"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="[Weapon Location]"
                    android:textSize="20sp"
                    android:textColor="#f0f0f0"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtTalent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Named Talent]"
            android:textColor="#aafdae13"
            android:textSize="25sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Named Talent Content]"
            android:textSize="20sp"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>