<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/redwall4"
            android:scaleType="centerCrop"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSheldoption1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="네임드 보호장구"
                        android:textSize="18sp"
                        android:textColor="#aaaaaa"
                        android:drawableTop="@drawable/namedlogocustom"
                        android:drawablePadding="5dp"
                        android:background="@drawable/buttonnobackcustom"
                        android:layout_marginBottom="10dp"/>
                    <Button
                        android:id="@+id/btnTalent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="특수 효과"
                        android:textSize="18sp"
                        android:textColor="#aaaaaa"
                        android:drawableTop="@drawable/ic_library_books_black_40dp"
                        android:drawablePadding="5dp"
                        android:background="@drawable/buttonnobackcustom"
                        android:layout_marginBottom="10dp"/>
                    <Button
                        android:id="@+id/btnSheldoption2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="특수 장비"
                        android:textSize="18sp"
                        android:textColor="#aaaaaa"
                        android:drawableTop="@drawable/exoticdropcustom"
                        android:drawablePadding="5dp"
                        android:background="@drawable/buttonnobackcustom"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>