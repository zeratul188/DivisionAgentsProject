<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp" android:gravity="top"
    android:background="#00222222">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHD 레벨 업"
        android:gravity="center"
        android:textSize="30sp"
        android:padding="10dp"
        android:background="@drawable/shdtitlecutom"
        android:textColor="#f0f0f0"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shdcontentcutom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shd_point_24dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHD 포인트 +1"
                android:textSize="16sp"
                android:textColor="#f0f0f0"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#40111111"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fm8"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현장 숙달 상자 +1"
                android:textSize="16sp"
                android:textColor="#f0f0f0"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnOK"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="확인"
        android:textColor="#fe6e0e"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

</LinearLayout>