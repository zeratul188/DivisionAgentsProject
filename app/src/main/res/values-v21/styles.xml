<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/nanumTextView</item>
        <item name="android:buttonStyle">@style/nanumButton</item>
        <item name="android:editTextStyle">@style/nanumEditView</item>
        <item name="android:checkboxStyle">@style/nanumCheckBox</item>
        <item name="android:radioButtonStyle">@style/nanumRadioButton</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">#F0F0F0</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="nanumTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/korea_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="nanumButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/korea_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="nanumEditView" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/korea_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="nanumRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/korea_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="nanumCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/korea_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="drawer_font_size">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/nanumTextView</item>
        <item name="android:buttonStyle">@style/nanumButton</item>
        <item name="android:editTextStyle">@style/nanumEditView</item>
        <item name="android:checkboxStyle">@style/nanumCheckBox</item>
        <item name="android:radioButtonStyle">@style/nanumRadioButton</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
